#!/bin/bash
# make sure there is no preexisting Docker CID file
rm -f /Users/mkumar1/wdl/tar_example/cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask/execution/docker_cid
# run as in the original configuration without --rm flag (will remove later)
docker run \
  --cidfile /Users/mkumar1/wdl/tar_example/cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask/execution/docker_cid \
  -i \
   \
  --entrypoint /bin/bash \
  -v /Users/mkumar1/wdl/tar_example/cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask:/cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask:delegated \
  docker.io/man4ish/sampleimage@sha256:807f617b07ca547b08fa7e4569536391256f2c470bcc85cd05d7afec80eb6e35 /cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask/execution/script

# get the return code (working even if the container was detached)
rc=$(docker wait `cat /Users/mkumar1/wdl/tar_example/cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask/execution/docker_cid`)

# remove the container after waiting
docker rm `cat /Users/mkumar1/wdl/tar_example/cromwell-executions/myWorkflow/55e7a67f-130b-49ff-99e2-4bf1cb7fc359/call-myTask/execution/docker_cid`

# return exit code
